executable stack-to-nix
  ghc-options:         -Wall
  main-is:             Main.hs
  build-depends:       base >=4.11 && <4.12
                     , nix-tools
                     , transformers
                     , hnix == 0.4.0
                     , yaml
                     , aeson
                     , microlens
